{
  "name": "qa-automation-platform",
  "version": "1.0.0",
  "description": "Cross-platform test automation with recorder for Web, Desktop, and Mobile",
  "main": "main.js",
  "scripts": {
    "build": "tsc && npm run copy:assets",
    "copy:assets": "node -e \"require('fs').cpSync('src/ui/index.html', 'dist/ui/index.html')\"",
    "start": "node dist/index.js",
    "browser": "node dist/browser/browserServer.js",
    "gui": "node dist/gui-server.js",
    "dev": "ts-node src/index.ts",
    "recorder:web": "ts-node src/recorders/web/webRecorder.ts",
    "recorder:desktop": "ts-node src/recorders/desktop/desktopRecorder.ts",
    "recorder:mobile": "ts-node src/recorders/mobile/mobileRecorder.ts",
    "execute": "ts-node src/executor/testExecutor.ts",
    "ui": "electron .",
    "build:exe": "npm run build && electron-builder --win --x64",
    "build:pkg": "npm run build && pkg dist/gui-server.js -t node18-win-x64 -o QA-Automation-GUI.exe --assets public/**/*"
  },
  "keywords": [
    "automation",
    "testing",
    "recorder",
    "cross-platform"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@nut-tree-fork/nut-js": "^4.2.6",
    "@playwright/test": "^1.40.0",
    "appium": "^2.2.0",
    "chalk": "^4.1.2",
    "electron": "^27.0.0",
    "express": "^4.18.2",
    "playwright": "^1.40.0",
    "socket.io": "^4.5.4",
    "uuid": "^9.0.1",
    "webdriverio": "^8.24.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.19.19",
    "commander": "^14.0.1",
    "electron-builder": "^26.0.12",
    "glob": "^11.0.3",
    "pkg": "^5.8.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.0"
  },
  "build": {
    "appId": "com.qa-automation.platform",
    "productName": "QA Automation Platform",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron-main.js",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
